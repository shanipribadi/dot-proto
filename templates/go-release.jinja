{% if v_tagged_release -%}
{% set version = "v{version}" %}
{%- else -%}
{% set version = "{version}" %}
{%- endif -%}
name = "{{name}}"
type = "cli"

[resolve]
git-url = "https://github.com/{{repo}}"

[platform.linux]
archive_prefix = "{{name}}_{{version}}_linux_{arch}"
download-file = "{{name}}_{{version}}_linux_{arch}.tar.gz"

[platform.macos]
archive_prefix = "{{name}}_{{version}}_darwin_{arch}"
download-file = "{{name}}_{{version}}_darwin_{arch}.tar.gz"

[platform.windows]
archive_prefix = "{{name}}_{{version}}_windows_{arch}"
download-file = "{{name}}_{{version}}_windows_{arch}.tar.gz"

[install]
download-url = "https://github.com/{{repo}}/releases/download/{{version}}/{download_file}"
checksum-url = "https://github.com/{{repo}}/releases/download/{{version}}/checksums.txt"

[install.arch]
x86 = "i686"
x86_64 = "amd64"
aarch64 = "arm64"
